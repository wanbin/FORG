<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:gravity="top"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/totalSouce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/totalCount"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@android:dimen/app_icon_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/remainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/reaminTime"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/plusTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_time"
                android:textColor="@color/Red"
                android:textSize="@dimen/fontMiddle"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/remainCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/remainCount"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/plusTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_target"
                android:textColor="@color/Red"
                android:textSize="@dimen/fontMiddle"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/reset"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="33dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnreturn" />
    </LinearLayout>

	<Button
	    android:id="@+id/cryfrog"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="32dp"
	    android:background="@drawable/cg_main_000" />

</RelativeLayout>

